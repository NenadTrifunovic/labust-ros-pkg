	<simParams>
		<disableShaders> 0 </disableShaders>
		<resw> 800 </resw>
		<resh> 600 </resh>
		<offsetp>
			<x>0</x>
			<y>0</y>
			<z>0</z>
		</offsetp>
		<offsetr>
			<x> 3.14</x>
			<y> 0</y>
			<z> -1.57 </z>
		</offsetr>
		<enablePhysics> 1 </enablePhysics>
	</simParams>
	<camera>
		<freeMotion> 1 </freeMotion>
		<objectToTrack>pladypos/base_link</objectToTrack>
		<fov> 60 </fov>
		<aspectRatio> 1.33 </aspectRatio>
		<near> 1 </near>
		<far> 10000 </far>
		<position>
			<x>-5</x>
			<y>-5 </y>
			<z>8 </z>
		</position>
		<lookAt>
			<x>0</x>
			<y>0 </y>
			<z>0 </z>
		</lookAt>
	</camera>

	<vehicle>
		<name>pladypos</name>
		<file>data/scenes/pladypos.urdf</file>
		<position>
			<x> 0</x>
			<y> 0 </y>
			<z> 10 </z>
		</position>
		<orientation>
			<r>0</r>
			<p>0</p>
			<y>0</y>
		</orientation>

		<imu>
			<name>imu</name>
			<relativeTo>base_link</relativeTo>
			<position>
				<x>0</x>
				<y>0</y>
				<z>0</z>
			</position>
			<orientation>
				<r>0</r>
				<p>0</p>
				<y>3.1415</y>
			</orientation>
			<std>0.00000001</std>
		</imu>

		<gpsSensor>
			<name>GPSSensor</name>
			<relativeTo>base_link</relativeTo>
			<position>
				<x>0</x>
				<y>0</y>
				<z>0</z>
			</position>
			<orientation>
				<r>0</r>
				<p>0</p>
				<y>0</y>
			</orientation>
			<std>0.00005</std>
		</gpsSensor>

		<usblSensor>
			<name>USBLSensor</name>
			<relativeTo>base_link</relativeTo>
			<position>
				<x>0</x>
				<y>0</y>
				<z>0</z>
			</position>
			<orientation>
				<r>0</r>
				<p>0</p>
				<y>0</y>
			</orientation>
			<!-- <std>0.5</std> -->
			<std>0</std>
			<transponder>
				<name>diver</name>
				<id>0</id>
			</transponder>
		</usblSensor>
	</vehicle>

	<vehicle>
		<name>diver</name>
		<file>data/scenes/diver.urdf</file>
		<position>
			<x> 0</x>
			<y> 0 </y>
			<z> 2.0 </z>
		</position>
		<orientation>
			<r>0.7</r>
			<p>0</p>
			<y>0</y>
		</orientation>

		<pressureSensor>
			<name>diverPressureSensor</name>
			<relativeTo>base_link</relativeTo>
			<position>
				<x>0</x>
				<y>0</y>
				<z>0.2</z>
			</position>
			<orientation>
				<r>0</r>
				<p>0</p>
				<y>0</y>
			</orientation>
			<std>0.02</std>
		</pressureSensor>
	</vehicle>

	<object>
		<name>terrain</name>
		<file>terrain/shipwreck/terrain.ive</file>
		<position>
			<x> 0</x>
			<y> 0 </y>
			<z> 0 </z>
		</position>
		<orientation>
			<r>-3.14</r>
			<p>0</p>
			<y>1.57</y>
		</orientation>
	</object>

	<rosInterfaces>
		<ROSOdomToPAT>
			<topic> pladypos/uwsim_hook </topic>
			<vehicleName> pladypos </vehicleName>
			<visualize> 1 </visualize>
		</ROSOdomToPAT>
		<ROSOdomToPAT>
			<topic> diver/uwsim_hook </topic>
			<vehicleName> diver </vehicleName>
			<visualize> 1 </visualize>
		</ROSOdomToPAT>
		<ImuToROSImu>
			<name>imu</name>
			<topic>pladypos/imu</topic>
			<rate>20</rate>
		</ImuToROSImu>
		<PressureSensorToROS>
			<name>diverPressureSensor</name>
			<topic>diver/pressure</topic>
			<rate>5</rate>
		</PressureSensorToROS>
		<GPSSensorToROS>
			<name>GPSSensor</name>
			<topic>pladypos/gps</topic>
			<rate>1</rate>
		</GPSSensorToROS>
		<USBLSensorToROS>
			<name>USBLSensor</name>
			<topic>pladypos/usbl</topic>
			<rate>1</rate>
		</USBLSensorToROS>
		<OceanInfoToROS>
			<name>diver</name>
			<topic>pladypos/ocean_info</topic>
			<rate>20</rate>
		</OceanInfoToROS>
	</rosInterfaces>
